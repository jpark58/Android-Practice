<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="false"
            android:layout_centerInParent="false"
            android:layout_centerVertical="true"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"
            android:fontFamily="@font/baloo"
            android:gravity="center|center_vertical"
            android:text="더보기"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="14sp"
            android:layout_height="14sp"
            android:layout_centerVertical="true"
            android:layout_marginRight="1dp"
            android:layout_toLeftOf="@id/imageButton4"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/search_icon" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="14sp"
            android:layout_height="14sp"
            android:layout_alignParentTop="false"
            android:layout_centerVertical="true"
            android:layout_marginStart="5sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:layout_toLeftOf="@id/imageButton5"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:padding="0"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/music_icon" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="14sp"
            android:layout_height="14sp"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5sp"
            android:layout_marginLeft="5sp"
            android:layout_marginEnd="10sp"
            android:layout_marginRight="10sp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/settings_icon" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.cardview.widget.CardView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="true"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/profile" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/profile"
            android:layout_centerVertical="false"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:layout_toRightOf="@id/profile"
            android:text="ChaCha"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView4"
            android:layout_centerVertical="false"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:layout_toRightOf="@id/profile"
            android:text="jpark58@gmail.com"
            android:textSize="8sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:background="@drawable/rounded_corner_view"
            android:padding="4sp"
            android:text="Pay 0원"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5sp"
            android:layout_marginRight="5sp"
            android:layout_toLeftOf="@id/textView8"
            android:text="송금"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5sp"
            android:layout_marginRight="5sp"
            android:layout_toLeftOf="@id/textView9"
            android:text="결제"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10sp"
            android:layout_marginRight="10sp"
            android:text="자산"
            android:textSize="10sp" />
    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView25"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    app:srcCompat="@drawable/mail" />

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="메일"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/calender_icon"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    app:srcCompat="@drawable/calender" />

                <TextView
                    android:id="@+id/calender_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:gravity="center"
                    android:text="캘린더"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    app:srcCompat="@drawable/pet" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="카카오콘"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    app:srcCompat="@drawable/face" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="이모티콘"
                    android:textSize="10sp" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    app:srcCompat="@drawable/game" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="게임"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    app:srcCompat="@drawable/gift" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="선물"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    app:srcCompat="@drawable/haircut" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="헤어샵"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    app:srcCompat="@drawable/restaurant" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="레스토랑"
                    android:textSize="10sp" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    app:srcCompat="@drawable/shopping" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="쇼핑"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    app:srcCompat="@drawable/style" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="스타일"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    app:srcCompat="@drawable/ticket" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="티켓"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView18"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    app:srcCompat="@drawable/menu" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="도서"
                    android:textSize="10sp" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView24"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    app:srcCompat="@drawable/weather" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="도서"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView21"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    app:srcCompat="@drawable/money" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="환전"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView22"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    app:srcCompat="@drawable/qrcode" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="QR Code"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView23"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    app:srcCompat="@drawable/subway" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="지하철"
                    android:textSize="10sp" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ad" />
    </LinearLayout>

</LinearLayout>