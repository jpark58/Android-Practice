<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/background"
        android:paddingTop="20sp"
        android:paddingLeft="40sp"
        android:paddingRight="40sp"
        android:paddingBottom="20sp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sort by"
            android:layout_marginVertical="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sort_ascending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_color"
                android:layout_marginRight="30sp"
                android:fontFamily="sans-serif"
                android:textAllCaps="false"
                android:padding="10sp"
                android:text="Latest"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sort_descending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_color"
                android:textAllCaps="false"
                android:fontFamily="sans-serif"
                android:padding="10sp"
                android:text="Oldest"/>
        </LinearLayout>

        <TextView
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter by"
            android:layout_marginVertical="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000"
            />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:columnCount="2"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/filter_fun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_color"
                android:fontFamily="sans-serif"
                android:textAllCaps="false"
                android:layout_margin="10sp"
                android:padding="10sp"
                android:layout_gravity="center_horizontal"
                android:text="Fun"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/filter_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_color"
                android:textAllCaps="false"
                android:fontFamily="sans-serif"
                android:layout_margin="10sp"
                android:layout_gravity="center_horizontal"
                android:padding="10sp"
                android:text="Food"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/filter_travel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_color"
                android:textAllCaps="false"
                android:fontFamily="sans-serif"
                android:layout_margin="10sp"
                android:layout_gravity="center_horizontal"
                android:padding="10sp"
                android:text="Travel"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/filter_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_color"
                android:textAllCaps="false"
                android:fontFamily="sans-serif"
                android:layout_margin="10sp"
                android:padding="10sp"
                android:layout_gravity="center_horizontal"
                android:text="Movie"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/filter_family"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_color"
                android:textAllCaps="false"
                android:fontFamily="sans-serif"
                android:layout_columnSpan="2"
                android:layout_margin="10sp"
                android:layout_gravity="center_horizontal"
                android:padding="10sp"
                android:text="Family"/>
        </GridLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/colorText"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_height="1dp"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/filter_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:text="Cancel"
                android:textAllCaps="false"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/filter_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:text="Apply"
                android:textAllCaps="false" />

        </LinearLayout>

    </LinearLayout>


</FrameLayout>